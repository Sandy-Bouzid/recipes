{% extends 'admin/admin.html.twig' %}

{% block title %}{{ 'Catégories' | trans }}
{% endblock %}

{% block body %}
	<h1>{{ 'Catégories' | trans }}</h1>
	<p>
		<a href="{{path('admin.category.create')}}" class="btn btn-info">{{ 'Ajouter une catégorie' | trans }}</a>
	</p>

	<table class="table">
		<thead>
			<tr>
				<th>{{ 'Nom' | trans }}</th>
				<th>{{ 'Total' | trans }}</th>
				<th style="width: 200px">Actions</th>
			</tr>
		</thead>

		<tbody>
			{% for category in categories %}
				<tr>
					<td>
						<a href="{{ path('admin.category.edit', {id: category.category.id}) }}">{{ category.category.name }}</a>
					</td>
					<td>{{ category.total }}</td>
					<td>
						<div class="d-flex gap-1">
							<a href="{{ path('admin.category.edit', {id: category.category.id,}) }}" class="btn btn-warning btn-sm">{{ 'Modifier' | trans }}</a>
							<form action="{{ path('admin.category.delete', {id: category.category.id}) }}" method="post">
								<input type="hidden" name="_method" value="DELETE">
								<button type="submit" class="btn btn-danger btn-sm">{{ 'Supprimer' | trans }}</a>
							</form>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
