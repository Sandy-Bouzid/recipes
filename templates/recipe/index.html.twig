{% extends 'base.html.twig' %}

{% block title %}Toutes les recettes
{% endblock %}

{% block body %}
	<h2>Mes recettes :</h2>
	<p>{{ totalDuration }} minutes de cuisine !</p>
	<ul>
	{% for recipe in recipes %}
		<li><a href="{{ path('recipe.show', {id: recipe.id, slug:recipe.slug}) }}">{{ recipe.title }}</a></li>
	{% endfor %}
	</ul>
{% endblock %}
